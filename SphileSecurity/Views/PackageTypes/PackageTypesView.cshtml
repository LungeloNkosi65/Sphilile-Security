@model IEnumerable<SphileSecurity.Models.PackageType>

@{
    ViewBag.Title = "PackageTypesView";
}

<h2 class="h2-h">PackageTypesView</h2>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        height: 250px !important;
        margin-bottom: 20px !important;
        border: groove !important;
    }

        .card:hover {
            border-radius: 10px;
            border-color: aqua !important;
        }
        .h2-h{
            text-align:center
        }
</style>

@foreach (var item in Model)
{
    <div class="col-md-6">
        <div class="card">
            <img class="card-img-top" src="holder.js/100x180/" alt="">
            <div class="card-body">
                <h4 class="card-title">
                    <strong>@Html.DisplayFor(modelItem => item.PackageName)</strong>   
                </h4>
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.PackageDescription)
                    <br />
                </p>
                <p><a class="btn btn-default" onclick="location.href='@Url.Action("PackagesView","SecurityPackages", new { id=item.PackageTypeId})'">Go To Packages </a></p>

            </div>
        </div>
    </div>
}



