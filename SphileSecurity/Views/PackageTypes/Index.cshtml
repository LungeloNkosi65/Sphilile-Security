@model IEnumerable<SphileSecurity.Models.PackageType>

@{
    ViewBag.Title = "Index";
}

<h2>Package Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PackageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PackageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackageDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PackageTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PackageTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PackageTypeId })
        </td>
    </tr>
}

</table>
