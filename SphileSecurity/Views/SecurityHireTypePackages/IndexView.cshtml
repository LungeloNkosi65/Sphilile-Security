@model IEnumerable<SphileSecurity.Models.SecurityHireTypePackages>

@{
    ViewBag.Title = "IndexView";
}
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        height: 300px !important;
        margin-bottom: 20px !important;
        border: groove !important;
        margin-top: 20px !important;
    }

        .card:hover {
            border-radius: 10px;
            border-color: aqua !important;
        }

    .top-head {
        align-content: center;
        text-align: center !important;
    }
    .btn-success{
        background-color:green !important;
    }
</style>
<h2 class="top-head">Security Hire Packages</h2>


@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="holder.js/100x180/" alt="">
            <div class="card-body">
                <h4 class="card-title">
                    @Html.DisplayFor(modelItem => item.Name)
                </h4>
                <p class="card-text">
                    Package Type:  @Html.DisplayFor(modelItem => item.SecurityHireType.SecurityHireTypeName)
                    <br />
                    Price: @Html.DisplayFor(modelItem => item.Price)
                    <br />
                    Ratings : @Html.DisplayFor(modelItem => item.Rating)
                </p>
                <p class="card-text">
                    <strong style="text-align:center !important">Description</strong>
                    <br />
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                <p><a class="btn btn-success" onclick="location.href='@Url.Action("Create","SecurityHires", new { id=item.SecurityHireTypePackagesId})'">Select Package </a></p>

            </div>
        </div>
    </div>
}


