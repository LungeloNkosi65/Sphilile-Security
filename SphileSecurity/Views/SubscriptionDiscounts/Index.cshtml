@model IEnumerable<SphileSecurity.Models.SubscriptionDiscount>

@{
    ViewBag.Title = "Index";
}

<h2>Subscription Discounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PackageType.PackageName)
        </th>
